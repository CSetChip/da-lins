-- Exercicios ########################################################################

-- (Exercicio 1) Seleção das N primeiras linhas usando LIMIT
-- Liste as 10 primeiras linhas da tabela funnel utilizando o LIMIT

select * from sales.funnel f  
limit 10;

-- (Exercicio 2) Seleção das N primeiras linhas usando LIMIT e ORDER BY
-- Liste os 10 produtos mais caros da tabela products com o comando LIMIT

select * from sales.products p 
order by p.price desc
limit 10;

